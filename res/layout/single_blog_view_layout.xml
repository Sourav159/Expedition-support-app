<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="16dp">
        <ImageView
            android:id="@+id/blog_display_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/blog_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Demo Text"
            android:layout_marginLeft="4dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_toRightOf="@id/blog_display_image"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/excerpt_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is Demo Description Text"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/blog_display_image"
            android:layout_below="@id/blog_title_textview"
            android:textSize="14dp"
            android:gravity="left"
            android:lines="5"

            android:ellipsize="end"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>